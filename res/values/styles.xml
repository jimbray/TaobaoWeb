<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.Sherlock.ForceOverflow">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="actionBarStyle">@style/Widget.Styled.ActivityActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActivityActionBar</item>
        <item name="actionOverflowButtonStyle">@style/Widget.ActionBar.ActionButton.Overflow</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionBar.ActionButton.Overflow</item>
        <item name="android:windowBackground">@color/main_bg</item>
    </style>
    
    <style name="Widget.Styled.ActivityActionBar" parent="Widget.Sherlock.Light.ActionBar">
        <item name="background">@color/home_bg</item>
        <item name="divider">@android:color/transparent</item>
        <item name="titleTextStyle">@style/widget.ActionBar.TitleTextStyle</item>
        
        <item name="android:background">@color/home_bg</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/widget.ActionBar.TitleTextStyle</item>
    </style>
    
    <style name="widget.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
		<item name="android:textColor">@color/font_color</item>
		<item name="android:textStyle">bold</item>
	</style>
	
    <style name="Widget.ActionBar.ActionButton.Overflow" parent="Widget.Sherlock.ActionButton.Overflow">
       <item name="android:src">@drawable/ic_menu</item>
    </style>
    
    <style name="Progress_Dialog_Theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>边框
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明   去掉背景色边框也就去掉了 -->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
        <!-- <item name="android:windowContentOverlay">@null</item> -->
    </style>

        
